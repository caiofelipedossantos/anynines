<div class="container-fluid">

  <p id="notice"><%= notice %></p>

  <h1>Usuários</h1>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome Completo</th>
        <th>E-mail</th>
        <th>Telefone</th>
        <th>Endereço</th>
        <th>Número</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.fullname %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.address %></td>
          <td><%= user.number %></td>
          <td><%= user.district %></td>
          <td><%= user.city %></td>
          <td><%= user.state %></td>
          <td><%= link_to 'Visualizar', user, class: "btn btn-primary" %></td>
          <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-warning" %></td>
          <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Usuário', new_user_path, class: "btn btn-success" %>
</div>
